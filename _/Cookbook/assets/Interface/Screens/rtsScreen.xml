<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
    <useStyles filename="nifty-default-styles.xml" />
    <useStyles filename="Interface/Styles/rtsStyle.xml" />
    
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/Controls/rtsControls.xml" />
    
    <screen id="rtsScreen" controller="chapter06.controller.RTSScreenController" >
        <layer id="layer" backgroundColor="#003f" childLayout="center">
            <panel height="*" />
            <panel id="panel" height="25%" width="100%" valign="bottom" backgroundColor="#000f" childLayout="horizontal" visibleToMouse="true">
                <panel id="leftPanel" width="25%" backgroundColor="#500f">
                    
                </panel>
                <panel id="centerPanel" width="50%"  backgroundColor="#050f" childLayout="vertical">
                    <panel id="topCenterPanel" width="100%" height="25%" backgroundColor="#055f">
                    
                    </panel>
                    <panel id="bottomCenterPanel" width="100%" height="*" backgroundColor="#550f">
                    
                    </panel>
                </panel>
                <panel id="rightPanel" width="25%"  backgroundColor="#005f" childLayout="center">
                    <control id="buildingOptions" name="listBox" vertical="on" horizontal="off" displayItems="8" selection="Single" valign="bottom">
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
