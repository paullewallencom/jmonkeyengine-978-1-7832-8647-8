<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="Interface/Controls/optionsMenu.xml" />
    
<screen id="gameScreen" controller="chapter06.controller.GameScreenController">
        <layer id="layer0" childLayout="vertical" backgroundColor="#000f">
            <panel id="minimap" width="256px" height="256px" childLayout="absolute">
                <panel id="playerIcon" width="4px" height="4px" backgroundColor="#00ff"/>
            </panel>
        </layer>
       
        <layer id="optionsLayer" childLayout="vertical" backgroundColor="#0000">
            <control name="options" id="options" align="center" visible="false"/>
        </layer>
    </screen>
</nifty>
